<resources
  xmlns:app="http://schemas.android.com/apk/res-auto"
  >
  <style name="moreOptionText">
    <item name="android:textColor">@color/white</item>
    <item name="app:autoSizeTextType">uniform</item>   
    <item name="android:layout_width">128dp</item>
    <item name="android:layout_height">32dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:fontFamily">sans-serif-thin</item>
  </style>

  <style name="moreOptionImage">
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:layout_width">32dp</item>
    <item name="android:layout_height">32dp</item>
  </style>

  <style name="moreOptionListItem">
    <item name="android:orientation">horizontal</item>
    <item name="android:minWidth">25px</item>
    <item name="android:minHeight">25px</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">32dp</item>
  </style>

  <style name="timer_view">
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">24dp</item>
  </style>
</resources>